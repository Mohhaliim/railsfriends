<h2 class= "mb-3">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control mb-3" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" ,class:"form-control mb-3" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3 form-check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class:"mb-3 btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
